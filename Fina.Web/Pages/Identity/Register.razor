@page "/comecar"
@layout HeadLessLayout
@inherits RegisterPage
<PageTitle>Fina - Registrar</PageTitle>


<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="imgs/fina.png" alt="Fina-TEC seu controle financeiro." width="250"/>
            </div>
            
            <EditForm Model="@InputModels" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator/>
                
                <MudTextField T="string" Label="E-mail" HelperText="Campo obrigatório." InputType="InputType.Email" For="@(() => InputModels.Email)" @bind-Value="InputModels.Email" />
                
                <MudTextField T="string"
                              Label="Senha"
                              HelperText="Campo obrigatório"
                              InputType="InputType.Password"
                              For="@(() => InputModels.Password)"
                              @bind-Value="InputModels.Password" />

                <div class="d-flex mt-8">
                   @if (IsBusy)
                   {
                       <MudProgressCircular Color="Color.Info" Indeterminate="true"/>
                   }
                   else
                   {
                       <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Outlined" Color="Color.Primary">COMEÇAR</MudButton>
                       <MudSpacer/>
                       <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="/login">JÁ TENHO CONTA</MudButton>    
                   }
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

